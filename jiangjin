#include <stdio.h>
#include <stdlib.h>

int main()
{

		double I,J;
		printf("请输入当月利润:");
		scanf("%lf",&I);
		if(I<=10)
			J=I*0.1;
		else if(I<=20&&I>10)
			J=10*0.1+(I-10)*0.075;
		else if(I<=40&&I>20)
			J=10*0.1+(20-10)*0.075+(I-20)*0.05;
		else if(I<=60&&I>40)
			J=10*0.1+(20-10)*0.075+(40-20)*0.05+(I-60)*0.03;
		else if(I<=100&&I>60)
			J=10*0.1+(20-10)*0.075+(40-20)*0.05+(60-40)*0.03+(I-60)*0.015;
		else if(I>100)
			J=10*0.1+(20-10)*0.075+(40-20)*0.05+(60-40)*0.03+(100-60)*0.015+(I-100)*0.01;
		printf("应得的奖金是:%.4f\n",J);



    return 0;
}
